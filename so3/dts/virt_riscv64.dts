/dts-v1/;

#include "skeleton.dtsi"

/ {
	compatible = "riscv-virtio";
	model = "riscv-virtio,qemu";

	memory@80000000 {
		device_type = "memory";
		reg = <0x80000000 0x8000000>;
	};
	
	plic:platform-level-interrupt-controller@c000000 {
		interrupt-controller;
		#interrupt-cells = <0x3>;
		
		reg = <0xc000000 0x210000>;
		compatible = "intc,plic";
		status = "ok";
	};

	uart@10000000 {
		/* _NMR_ interrupts = <0x0a>;
		 * interrupt-parent = <&plic>; */
		reg = <0x10000000 0x100>;
		compatible = "serial,ns16550";
		status = "ok";
	};
	
	periodic-timer@0 {
		compatible = "riscv,periodic-timer";
		reg = <0 0>;
		status = "ok";
	};
	
	clocksource-timer@0 {
		compatible = "riscv,clocksource-timer";
		reg = <0 0>;
		status = "ok";
	};
};