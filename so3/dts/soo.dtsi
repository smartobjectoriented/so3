/dts-v1/;

#include "skeleton.dtsi"

/ {
	model = "SO3 Vexpress";
	compatible = "arm,vexpress";

	cpus {
		device_type = "cpu";
		compatible = "arm,cortex-a15";
	};
	
	memory {
		reg = <0 0>;
	};
	
	soo-serial {
		compatible = "soo-serial";
		status = "ok";
	};

	/* SO3 virtual timer managed by AVZ */

	soo-timer {
		compatible = "soo-timer,periodic-timer";
		status = "ok";
	};

	/* Free-running clocksource */
	clocksource-timer {
		compatible = "soo-timer,clocksource-timer";
		status = "ok";
	};

	oneshot-timer {
		compatible ="soo-timer,oneshot-timer";
		status = "ok";
	};

	soo-irq {
		compatible = "soo-irq";
		status = "ok";
	};


	ME: ME {
#if 0 /* If used without ramfs */
		domain-size = <0x400000>; /* 4 MB */
#endif
		domain-size = <0x1000000>; /* 16 MB */

		frontends {

			vdummy {
				compatible = "vdummy,frontend";
				status = "disabled";
			};

			vuihandler {
				compatible = "vuihandler,frontend";
				status = "disabled";
			};

			vuart {
				compatible = "vuart,frontend";
				status = "disabled";
			};

			vsenseled {
				compatible = "vsenseled,frontend";
				status = "disabled";
			};

			vsensej {
				compatible = "vsensej,frontend";
				status = "disabled";
			};

			vdoga12v6nm {
				compatible = "vdoga12v6nm,frontend";
				status = "disabled";
			};

			vweather {
				compatible = "vweather,frontend";
				status = "disabled";
			};

			vwagoled {
				compatible = "vwagoled,frontend";
				status = "disabled";
			};

			venocean {
				compatible = "venocean,frontend";
				status = "disabled";
			};

			viuoc {
				compatible = "viuoc,frontend";
				status = "disabled";
			};

			vknx {
				compatible = "vknx,frontend";
				status = "disabled";
			};
		};

	};
};
