/dts-v1/;

/ {
	description = "Kernel and rootfs components for virt32 environment";

	images {

		avz {
			description = "AVZ Hypervisor (32-bit) Polymorphic SO3";
            		data = /incbin/("../avz/so3.bin");
			type = "kernel";
            		os = "linux";
			arch = "arm";
			compression = "none";
			load = <0x40008000>;
			entry = <0x40008000>;
		};

		avz_dt {
			description = "Flattened Device Tree blob";
			data = /incbin/("../avz/dts/virt32_avz.dtb");
			type = "avz_dt";
			arch = "arm";
			compression = "none";
			load = <0x40b00000>;
		};
		
		linux {
			description = "Linux kernel";
			data = /incbin/("../linux/arch/arm/boot/Image");
			type = "avz";
			arch = "arm";
			os = "linux";
			compression = "none";
			load = <0x41008000>;
			entry = <0x41008000>;
		};
		 
		fdt_linux {
			description = "Linux device tree blob";
			data = /incbin/("../linux/arch/arm/boot/dts/virt32.dtb");
			type = "flat_dt";
			arch = "arm";
			compression = "none";
			load = <0x5a000000>;
		};

		initrd {
			description = "Initial rootfs (initrd)";
			data = /incbin/("../rootfs/board/virt32/initrd.cpio");
			type = "ramdisk";
			arch = "arm";
			os = "linux";
			compression = "none";
			load = <0x50c00000>;
		};

	};
	
	configurations {
			default = "conf_linux_avz";

			conf_linux_avz {
				description = "SO3/AVZ on virt32";
				kernel = "avz";
				fdt = "fdt_linux";
            			loadables = "avz_dt", "linux";
				ramdisk = "initrd";
			};
		
	};

};
