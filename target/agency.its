/dts-v1/;

/ {
	description = "SO3 image for the SOO.agency ME";

	images {
	
		so3 {
			description = "SO3 OS kernel";
			data = /incbin/("../so3/so3.bin");
			type = "ME";
			arch = "arm";
			os = "linux";
			compression = "none";
			
			hash {
				algo = "crc32";
			};
		};

		fdt {
			description = "Flattened Device Tree blob";
			data = /incbin/("../so3/dts/agency.dtb");
			type = "flat_dt";
			arch = "arm";
			compression = "none";
			hash {
				algo = "crc32";
			};
		};	

    };
};
